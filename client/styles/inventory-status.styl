inventorystatus
	position relative
	.--top
		display flex
		button
			margin-left auto
	.view
		display flex
		position absolute
		list-style-type none
		margin 0
		padding 0
		top -92px
		left -9px
		font-size 24px
		li
			&.active
				a
					color #6A6A6A
				font-weight bold
				border-bottom 10px solid #6A6A6A
				padding-bottom 4px
			margin-right 30px		
		a
			color #A0A0A0
			
	.--scroll-view
		overflow auto
		

		
	.month-view
		.name > div
			width 190px
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
	.day-view
		padding-top 1px

	.tabs
		margin -20px -20px 20px -20px
		display flex
		background-color #F1F1F2
		border-bottom 1px solid #BBBDBF
		height 73px
		li
			border-right 1px solid #BBBDBF
			&.active a
				background-color white	
			a
				display block
				color #6A6A6A
				font-size 24px
				text-decoration none
				height 73px
				width 270px
				line-height 73px
				text-align center
