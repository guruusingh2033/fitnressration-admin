order
	position relative
	.print-invoice
		position absolute
		top 0
		right 0
	display flex
	flex-wrap wrap
	> *
		flex 0 0 auto
	h3
		font-size 24px
	h4
		font-size 20px
		margin-top 10px
	// font-size 17px
	.value
		color #A0A0A0
	.order-number
		width 100%
		margin-bottom 10px
		&:after
			content ''
			display inline-block
			margin-left 2px
			width 18px
			height 100%
			vertical-align top
			background-repeat no-repeat
			background-position center right
			background-size contain
		&.not-flagged:after
			background-image url(/images/not-flagged.png)
		&.flagged:after
			background-image url(/images/flagged.png)
	.--top
		width 100%
		display flex
		> *
			flex 1 1 0

	.personal, .purchase
		margin-right 37px
		
	.purchase
		margin-bottom 20px
		
		h5
			margin 0
			font-weight normal
		.bundles
			> ul
				> li
					&:not(:first-child)
						margin-top 9px
					.bundle-type
						display flex
						.value
							margin-left 6px
						.price
							margin-left auto
							color #A0A0A0

			.meals, .allergies
				ul
					padding-left 10px
				li
					color #A0A0A0
					font-size 16px
					.quantity
						display inline-block
						width 13px
						
			.allergies
				li
					display flex
					.surcharge
						margin-left auto
					
		.subtotal
			font-size 24px
			border-top 1px solid #E6E6E6
			margin-top 8px
			padding-top 8px
			display flex
			.value
				margin-left auto
	.fulfillment
		.delivery-fee
			font-size 24px
			border-top 1px solid #E6E6E6
			margin-top 8px
			padding-top 8px
			display flex
			.value
				margin-left auto
			
	.payment
		margin-right 20px
		.total
			font-size 24px
			margin-top 10px